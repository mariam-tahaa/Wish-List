<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.wishlist.Controllers.IndexController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true">
            <image>
                <Image url="@Background.jpeg" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" maxWidth="350.0" spacing="40.0">
            <children>
                <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#goToLogin" prefHeight="70.0" prefWidth="300.0" style="-fx-background-color: rgba(45, 45, 45, 0.85); -fx-background-radius: 20; -fx-cursor: hand;" text="Login" textFill="WHITE">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="42.0" />
                    </font>
                </Button>

                <Button fx:id="rgstBtn" mnemonicParsing="false" onAction="#goToRegister" prefHeight="70.0" prefWidth="300.0" style="-fx-background-color: rgba(45, 45, 45, 0.85); -fx-background-radius: 20; -fx-cursor: hand;" text="Register" textFill="WHITE">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="42.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</StackPane>
