<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="900.0"
           style="-fx-background-color: white;"
           xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.wishlist.Controllers.PrimaryController">

    <children>
        <VBox alignment="CENTER" spacing="50.0">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <children>

                <Button fx:id="startBtn"
                        mnemonicParsing="false"
                        prefHeight="85.0"
                        prefWidth="380.0"
                        text="Start Server"
                        textFill="WHITE"
                        onAction="#startServer"
                        style="-fx-background-color: linear-gradient(to right, #000000, #f5b995);
                               -fx-background-radius: 25;
                               -fx-cursor: hand;">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="44.0"/>
                    </font>
                </Button>

                <Button fx:id="stopBtn"
                        mnemonicParsing="false"
                        prefHeight="85.0"
                        prefWidth="380.0"
                        text="Stop Server"
                        textFill="WHITE"
                        onAction="#stopServer"
                        style="-fx-background-color: linear-gradient(to right, #f5b995, #000000);
                               -fx-background-radius: 25;
                               -fx-cursor: hand;">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="44.0"/>
                    </font>
                </Button>

            </children>
        </VBox>
    </children>
</StackPane>
