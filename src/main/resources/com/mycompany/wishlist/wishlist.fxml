<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="900.0"
           style="-fx-font-size: 16px;"
           xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.wishlist.Controllers.WishlistController">

    <!-- Background -->
    <ImageView fitHeight="600.0" fitWidth="900.0">
        <image>
            <Image url="@Background.jpeg"/>
        </image>
    </ImageView>

    <HBox>

        <!-- ================= SIDEBAR ================= -->
        <VBox prefWidth="260"
              spacing="15"
              style="-fx-background-color: rgba(0,0,0,0.85);">

            <padding>
                <Insets top="40" left="25" right="15" bottom="30"/>
            </padding>

            <!-- Logo -->
            <HBox spacing="10">
                <Label text="â˜…" textFill="#f5b995">
                    <font><Font size="36"/></font>
                </Label>
                <Label text="Wishes" textFill="WHITE">
                    <font><Font size="36"/></font>
                </Label>
            </HBox>

            <!-- Navigation -->
            <VBox spacing="10">

                <HBox fx:id="home" spacing="15" alignment="CENTER_LEFT"
                      onMouseClicked="#goToHome" style="-fx-cursor: hand;">
                    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
                    <Label text="ðŸ " textFill="#f5b995"/>
                    <Label text="Homepage" textFill="#f5b995" style="-fx-font-weight: bold;"/>
                </HBox>

                <HBox fx:id="wishlist" spacing="15" alignment="CENTER_LEFT"
                      onMouseClicked="#goToWishlist" style="-fx-cursor: hand;">
                    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
                    <Label text="ðŸ“‹" textFill="#ffffff"/>
                    <Label text="Wishlist" textFill="#ffffff" style="-fx-font-weight: bold;"/>
                </HBox>

                <HBox fx:id="contributions" spacing="15" alignment="CENTER_LEFT"
                      onMouseClicked="#goToContributions" style="-fx-cursor: hand;">
                    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
                    <Label text="ðŸ¤" textFill="#f5b995"/>
                    <Label text="Contributions" textFill="#f5b995" style="-fx-font-weight: bold;"/>
                </HBox>

                <HBox fx:id="notifications" spacing="15" alignment="CENTER_LEFT"
                      onMouseClicked="#goToNotifications" style="-fx-cursor: hand;">
                    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
                    <Label text="ðŸ””" textFill="#f5b995"/>
                    <Label text="Notifications" textFill="#f5b995" style="-fx-font-weight: bold;"/>
                </HBox>

                <HBox fx:id="friends" spacing="15" alignment="CENTER_LEFT"
                      onMouseClicked="#goToFriends" style="-fx-cursor: hand;">
                    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
                    <Label text="ðŸ‘¥" textFill="#f5b995"/>
                    <Label text="Friends" textFill="#f5b995" style="-fx-font-weight: bold;"/>
                </HBox>

                <HBox fx:id="friendRequests" spacing="15" alignment="CENTER_LEFT"
                      onMouseClicked="#goToFriendRequests" style="-fx-cursor: hand;">
                    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
                    <Label text="ðŸ‘¤+" textFill="#f5b995"/>
                    <Label text="Friend Requests" textFill="#f5b995" style="-fx-font-weight: bold;"/>
                </HBox>

                <HBox fx:id="allUsers" spacing="15" alignment="CENTER_LEFT"
                      onMouseClicked="#goToAllUsers" style="-fx-cursor: hand;">
                    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
                    <Label text="ðŸŒ" textFill="#f5b995"/>
                    <Label text="All Users" textFill="#f5b995" style="-fx-font-weight: bold;"/>
                </HBox>

            </VBox>
        </VBox>

        <!-- ================= MAIN CONTENT ================= -->
        <StackPane HBox.hgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" fillWidth="false" spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_RIGHT" prefWidth="650.0">
                            <children>
                                <HBox alignment="CENTER" spacing="10.0" style="-fx-cursor: hand;">
                                    <children>
                                        <Label fx:id="addItem" onMouseClicked="#goToAddItem" text="Add item" textFill="WHITE">
                                            <font><Font name="Arial Rounded MT Bold" size="18.0" /></font>
                                        </Label>
                                        <Label fx:id="addIcon" onMouseClicked="#goToAddItem" text="âŠ•" textFill="WHITE">
                                            <font><Font size="24.0" /></font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                            <padding><Insets right="20.0" /></padding>
                        </HBox>

                        <!-- ScrollPane that will contain dynamic content -->
                        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER"
                                    maxHeight="420.0" maxWidth="650.0"
                                    style="-fx-background: transparent; -fx-background-color: rgba(12, 12, 12, 0.8); -fx-background-radius: 30;"
                                    vbarPolicy="AS_NEEDED">
                            <content>
                                <!-- This VBox will be populated dynamically -->
                                <VBox fx:id="wishlistPane" spacing="10.0"
                                      style="-fx-background-color: transparent;">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <HBox alignment="TOP_RIGHT" pickOnBounds="false" spacing="15" >
                    <padding><Insets right="30.0" top="30.0" /></padding>
                    <children>
                        <Label fx:id="username" textFill="#f5b995" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                        </Label>
                        <Label fx:id="logoutBtn" text="Logout âž¡" textFill="WHITE"
                               onMouseClicked="#logout"
                               style="-fx-cursor: hand;">
                            <font><Font name="Arial Rounded MT Bold" size="14.0" /></font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </HBox>
</StackPane>